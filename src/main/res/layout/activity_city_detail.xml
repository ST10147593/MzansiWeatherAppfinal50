<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cityDetailNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="City Name"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/cityDetailTempTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 Â°C"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/cityDetailNameTv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/cityDetailRainTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20% chance of rain"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/cityDetailTempTv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
